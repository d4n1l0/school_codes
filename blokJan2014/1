#include <iostream>
#include <string>

using namespace std;

int main()
{
	string s;
	cin >> s;

	int ds[300001];

	for (int L = 1; L <= s.size(); L++)
	{
		char div[255]
		for (int i = 'a'; i <= 'z'; i++) div[i] = 0;
		
		int d = 0;

		for (int i = 0; i < L; i++) div[a[i]]++;

		// LineSweep
		for (int i = 1; i <= s.size()-L; i++)
		{
			if (a[i-1] == a[i+L-1])
			else
			{
				if (--div[a[i-1]] == 0) d++;
				if (++div[a[i+L-1]]== 1) d--;
				cout << i << " " <<  L << " "<< d << endl;
				ds[d]++;
			}
		}
	}


	return 0;
}
